/** js code **/
var colourArray = ["red", "green", "black","purple","gray","gold"]

var colorId = 0;
setInterval(()=>{
    document.getElementById("work").style.background = colourArray[colorId]
    console.log(colourArray[colorId]);
    colorId++ 
    colorId = colorId > colourArray.length - 1 ? 0 : colorId
},1000)

